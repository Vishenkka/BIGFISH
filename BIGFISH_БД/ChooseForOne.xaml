<UserControl x:Class="BIGFISH_БД.ChooseForOne"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BIGFISH_БД"  xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="630" d:DesignWidth="1130">
    <Grid>


        <TextBlock Text="Упаковщицы" TextWrapping="Wrap" Foreground="SlateBlue" FontSize="40" Width="250" Height="90" TextAlignment="Center" Margin="165,124,715,416"/>
        <Button x:Name="DopReport" Click="DopReport_Click"  Background="AliceBlue" Content="Сформировать отчет" Width="250" FontSize="19" Margin="165,457,715,141"/>
        <ComboBox Name="cbPackers" Width="200" Height="50" FontSize="25" Margin="190,219,740,0" VerticalAlignment="Top" TextBoxBase.TextChanged="cbPackers_TextChanged"  IsEditable="True"  TextSearch.TextPath="FIO" ItemsSource="{Binding Packers}" DisplayMemberPath="FIO" SelectedValuePath="FIO"/>
        <DatePicker Name="dpStartDate" Width="200" Height="50" FontSize="25" Margin="190,290,740,290" />
        <DatePicker Name="dpEndDate" Width="200" Height="50" FontSize="25" Margin="190,367,740,213" />


        <TextBlock Text="Литейщики" TextWrapping="Wrap" Foreground="SlateBlue" FontSize="40" Width="250" Height="90" TextAlignment="Center" Margin="711,124,169,416"/>
        <Button x:Name="DopReportFoundry" Click="DopReportFoundry_Click"  Background="AliceBlue" Content="Сформировать отчет" Width="250" FontSize="19" Margin="711,457,169,141"/>
        <ComboBox Name="cbFoundry" Width="200" Height="50" FontSize="25" Margin="736,219,194,0" VerticalAlignment="Top" TextBoxBase.TextChanged="cbFoundry_TextChanged"  IsEditable="True"  TextSearch.TextPath="FIO_Foundry" ItemsSource="{Binding Foundry}" DisplayMemberPath="FIO_Foundry" SelectedValuePath="FIO_Foundry"/>
        <DatePicker Name="dpStartDateFoundry" Width="200" Height="50" FontSize="25" Margin="736,290,194,290" />
        <DatePicker Name="dpEndDateFoundry" Width="200" Height="50" FontSize="25" Margin="736,367,194,213" />

        <Button x:Name="BtnBack" Background="SlateBlue"  Height="60" Width="60" Margin="5" HorizontalAlignment="Right" VerticalAlignment="Bottom"  Style="{StaticResource MaterialDesignFloatingActionButton}" Click="BtnBack_Click">
            <materialDesign:PackIcon Kind="ArrowLeft" Width="25" Height="25" Foreground="White"/>
        </Button>
    </Grid>
</UserControl>
