<UserControl x:Class="BIGFISH_БД.DailyReportPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BIGFISH_БД" xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="630" d:DesignWidth="1211" Loaded="UserControl_Loaded">
    <Grid>
        <Button x:Name="ShowChanges" Content="Изменить запись" TabIndex="12" KeyDown="UIElement_KeyDown" Click="ShowChanges_Click" VerticalAlignment="Top" Background="AliceBlue" Margin="721,51,237,0" Height="37">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="-0.982"/>
                    <RotateTransform/>
                    <TranslateTransform X="-0.583"/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>

        <TextBox Name="tbPoisk" TabIndex="13" KeyDown="UIElement_KeyDown" TextChanged="tbPoisk_TextChanged" FontSize="20" HorizontalAlignment="Left" Height="31" Margin="80,43,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="182"/>
        <TextBlock Text="Упаковщица" TextWrapping="Wrap" HorizontalAlignment="Right" FontSize="16" Margin="0,79,831,491" Width="194"/>

        <TextBox Name="tbPoisk1" TabIndex="14" KeyDown="UIElement_KeyDown" TextChanged="tbPoisk1_TextChanged" FontSize="20" HorizontalAlignment="Left" Height="31" Margin="290,43,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="220"/>
        <TextBlock Text="Литейщик" TextWrapping="Wrap" HorizontalAlignment="Right" FontSize="16" Margin="0,79,583,491" Width="194"/>

        <TextBox Name="tbNumVedPoisk" TabIndex="15" KeyDown="UIElement_KeyDown" TextChanged="tbNumVedPoisk_TextChanged" Margin="545,43,515,557" FontSize="18"/>
        <TextBlock Text="№ ведомости" Height="30" TextWrapping="Wrap" HorizontalAlignment="Right" FontSize="16" Margin="0,78,409,522" Width="196"/>

        <DataGrid Background="AliceBlue" Name="TablDailyRep" Margin="0,104,0,0" HorizontalAlignment="Center" Height="350" AutoGenerateColumns="False" VerticalAlignment="Top" Width="1060">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Id}" Width="70" Header="Id"/>
                <DataGridTextColumn Binding="{Binding Number_Ved}" Header="№" Width="60"/>
                <DataGridTextColumn Binding="{Binding DatePack, StringFormat='dd/MM/yyyy'}" Width="80" Header="Дата упаковки"/>
                <DataGridTextColumn Binding="{Binding FIO}" Width="100" Header="Упаковщица"/>
                <DataGridTextColumn Binding="{Binding ArticlePack}" Width="85" Header="Артикул"/>
                <DataGridTextColumn Binding="{Binding StorageName}" Width="70" Header="Склад"/>
                <DataGridTextColumn Binding="{Binding FinePacks}" Width="80" Header="Штраф"/>
                <DataGridTextColumn Binding="{Binding Packs}" Width="80" Header="Пачки"/>
                <DataGridTextColumn Binding="{Binding DateFoundry, StringFormat='dd/MM/yyyy'}" Width="90" Header="Дата литья"/>
                <DataGridTextColumn Binding="{Binding FIO_Foundry}" Width="100" Header="Литейщик"/>
                <DataGridTextColumn Binding="{Binding ArticleFoundry}" Width="85" Header="Артикул"/>
                <DataGridTextColumn Binding="{Binding Packs2}" Width="80" Header="Пачки"/>
                <DataGridTextColumn Binding="{Binding FinePacksFoundry}" Width="80" Header="Брак литья в пачках"/>
            </DataGrid.Columns>
        </DataGrid>

        <TextBlock Text="Дата" TextWrapping="Wrap" HorizontalAlignment="Right" FontSize="16" Margin="0,518,904,62" Width="197"/>
        <DatePicker Name="dpDatePack"  PreviewKeyDown="UIElement_KeyDown" DisplayDateStart="2020-01-01" DisplayDateEnd="2099-01-01" Margin="19,484,1027,121"/>

        <TextBlock Text="Упаковщица" TextWrapping="Wrap" HorizontalAlignment="Right" FontSize="16" Margin="0,521,862,44" Width="162"/>
        <ComboBox Name="tbPacker"  KeyDown="UIElement_KeyDown" TextBoxBase.TextChanged="tbPacker_TextChanged" IsEditable="True" FontSize="18" HorizontalAlignment="Right" Height="55" Margin="0,454,917,0" VerticalAlignment="Top" Width="100" TextSearch.TextPath="FIO" ItemsSource="{Binding Packers}" DisplayMemberPath="FIO" SelectedValuePath="FIO"/>

        <TextBlock Text="Артикул" TextWrapping="Wrap" HorizontalAlignment="Right" FontSize="16" Margin="0,521,707,44" Width="197"/>
        <ComboBox Name="tbArticle"  KeyDown="UIElement_KeyDown" TextBoxBase.TextChanged="tbArticle_TextChanged" IsEditable="True" FontSize="18" HorizontalAlignment="Right" Height="55" Margin="0,454,812,0" VerticalAlignment="Top" Width="100" TextSearch.TextPath="Article" ItemsSource="{Binding Articles}" DisplayMemberPath="Article" SelectedValuePath="Article"/>

        <TextBlock Text="Склад" TextWrapping="Wrap" HorizontalAlignment="Right" FontSize="16" Margin="0,521,591,44" Width="197"/>
        <ComboBox Name="tbStorageName"  KeyDown="UIElement_KeyDown" TextBoxBase.TextChanged="tbStorageName_TextChanged" IsEditable="True" FontSize="18" HorizontalAlignment="Right" Height="55" Margin="0,454,707,0" VerticalAlignment="Top" Width="100" TextSearch.TextPath="StorageName" ItemsSource="{Binding Storage}" DisplayMemberPath="StorageName" SelectedValuePath="StorageName"/>

        <TextBlock Text="Штрафные пачки" TextAlignment="Center" TextWrapping="Wrap" HorizontalAlignment="Right" FontSize="16" Margin="0,521,613,44" Width="84"/>
        <TextBox Name="tbFinePacks"  KeyDown="UIElement_KeyDown" Margin="434,454,613,121" FontSize="18"/>

        <TextBlock Text="Кол-во пачек" TextWrapping="Wrap" HorizontalAlignment="Right" FontSize="16" Margin="0,521,410,44" Width="197"/>
        <TextBox Name="tbcolvoPacks"  KeyDown="UIElement_KeyDown" Margin="538,454,508,121" FontSize="18"/>

        <TextBlock Text="Дата литья" TextWrapping="Wrap" HorizontalAlignment="Right" FontSize="16" Margin="0,521,294,44" Width="197"/>
        <DatePicker Name="dpDateFoundry" PreviewKeyDown="UIElement_KeyDown" DisplayDateStart="2020-01-01" DisplayDateEnd="2099-01-01" Margin="647,484,410,121"/>

        <TextBlock Text="Литейщик" TextWrapping="Wrap" HorizontalAlignment="Right" FontSize="16" Margin="0,521,187,44" Width="196"/>
        <ComboBox Name="tbFoundry"  KeyDown="UIElement_KeyDown" TextBoxBase.TextChanged="tbFoundry_TextChanged" IsEditable="True" FontSize="18" HorizontalAlignment="Right" Height="55" Margin="0,454,294,0" VerticalAlignment="Top" Width="100" TextSearch.TextPath="FIO_Foundry" ItemsSource="{Binding Foundry}" DisplayMemberPath="FIO_Foundry" SelectedValuePath="FIO_Foundry"/>

        <TextBlock Text="Артикул" TextWrapping="Wrap" HorizontalAlignment="Right" FontSize="16" Margin="0,521,70,44" Width="196"/>
        <ComboBox Name="tbArticle2"  KeyDown="UIElement_KeyDown" TextBoxBase.TextChanged="tbArticle2_TextChanged" IsEditable="True" FontSize="18" HorizontalAlignment="Right" Height="55" Margin="0,454,189,0" VerticalAlignment="Top" Width="100" TextSearch.TextPath="Article" ItemsSource="{Binding Articles}" DisplayMemberPath="Article" SelectedValuePath="Article"/>

        <TextBlock Text="Кол-во пачек" TextWrapping="Wrap" TextAlignment="Center" HorizontalAlignment="Right" FontSize="16" Margin="0,521,92,44" Width="90"/>
        <TextBox Name="tbcolvoPacks2"  KeyDown="UIElement_KeyDown" Margin="951,454,95,121" FontSize="18"/>

        <TextBlock Text="Брак литья в пачках" TextAlignment="Center" TextWrapping="Wrap" HorizontalAlignment="Right" FontSize="16" Margin="0,521,2,44" Width="85"/>
        <TextBox Name="tbFinePacksFoundry"  KeyDown="UIElement_KeyDown" Margin="1046,454,0,121" FontSize="18"/>

        <TextBox Name="tbId" KeyDown="UIElement_KeyDown" Margin="194,540,881,36" FontSize="18"/>
        <TextBlock Text="Id" Height="30" TextWrapping="Wrap" HorizontalAlignment="Right" FontSize="16" Margin="0,595,893,5" Width="34"/>

        <TextBox Name="tbNumVed"  KeyDown="UIElement_KeyDown" Margin="10,565,1024,36" FontSize="18"/>
        <TextBlock Text="№ ведомости" Height="30" TextWrapping="Wrap" HorizontalAlignment="Right" FontSize="16" Margin="0,595,927,5" Width="196"/>

        <Button Content="Добавить № ведомости"  KeyDown="UIElement_KeyDown" Background="AliceBlue" Name="AddNumVed" Click="AddNumVed_Click" HorizontalAlignment="Left" Margin="335,579,0,0" VerticalAlignment="Top" Width="200"/>

        <Button Content="Удалить(по Id)"  KeyDown="UIElement_KeyDown" Background="AliceBlue" Click="Delete_Click" HorizontalAlignment="Left" Margin="565,579,0,0" VerticalAlignment="Top" Width="200"/>

        <Button Content="Добавить"  KeyDown="UIElement_KeyDown" Background="AliceBlue" Click="Add_Click" HorizontalAlignment="Left" Margin="813,579,0,0" VerticalAlignment="Top" Width="200"/>

        <Button x:Name="BtnBack"  KeyDown="UIElement_KeyDown" Background="SlateBlue" Height="60" Width="60" Margin="5" HorizontalAlignment="Right" VerticalAlignment="Bottom" Style="{StaticResource MaterialDesignFloatingActionButton}" Click="BtnBack_Click">
            <materialDesign:PackIcon Kind="ArrowLeft" Width="25" Height="25" Foreground="White"/>
        </Button>
    </Grid>
</UserControl>
