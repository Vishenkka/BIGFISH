<Window x:Class="BIGFISH_БД.ChangeDailyReport"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BIGFISH_БД" xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d" 
        Title="ChangeDailyReport" Height="500" Width="900" WindowStartupLocation="CenterScreen">

    <Viewbox Stretch="Uniform">
        <Grid>

            <TextBlock Text="Укажите Id изменяемой записи и параметры:" FontSize="30" TextAlignment="Center" Foreground="SlateBlue"/>
            <TextBox x:Name="tbId" Width="100" Height="45" VerticalAlignment="Top" Margin="402,40,398,0" FontSize="16"/>
            <TextBlock Text="Id" FontSize="16" Margin="398,90,398,366" TextAlignment="Center" RenderTransformOrigin="0.476,1.224"/>

            <TextBlock Text="Дата" TextWrapping="Wrap" HorizontalAlignment="Right" FontSize="16" Width="50" Margin="0,185,707,261"/>
            <DatePicker Name="dpDatePack" FontSize="16" DisplayDateStart="2020-01-01" DisplayDateEnd="2099-01-01"  Width="100" Margin="118,149,682,302" />

            <TextBlock Text="Упаковщица" TextWrapping="Wrap" HorizontalAlignment="Right" FontSize="16" Width="100" Margin="0,187,557,265"/>
            <ComboBox Name="tbPacker" TextBoxBase.TextChanged="tbPacker_TextChanged"  IsEditable="True" FontSize="18" HorizontalAlignment="Right"  Height="35"  Text="" VerticalAlignment="Top" Width="100" TextSearch.TextPath="FIO" ItemsSource="{Binding Packers}" DisplayMemberPath="FIO" SelectedValuePath="FIO" Margin="0,149,557,0"/>

            <TextBlock Text="Артикул" TextWrapping="Wrap" HorizontalAlignment="Right" FontSize="16"  Width="80" Margin="0,187,439,267"/>
            <ComboBox Name="tbArticle" TextBoxBase.TextChanged="tbArticle_TextChanged"  IsEditable="True" FontSize="18" HorizontalAlignment="Right"  Height="35"   Text="" VerticalAlignment="Top" Width="100" TextSearch.TextPath="Article" ItemsSource="{Binding Articles}" DisplayMemberPath="Article" SelectedValuePath="Article" Margin="0,149,429,0"/>

            <TextBlock Text="Склад" TextWrapping="Wrap" HorizontalAlignment="Right" FontSize="16"  Width="57" Margin="0,187,337,267"/>
            <ComboBox Name="tbStorageName" TextBoxBase.TextChanged="tbStorageName_TextChanged"  IsEditable="True" FontSize="18" HorizontalAlignment="Right"  Height="35" Text="" VerticalAlignment="Top" Width="100" TextSearch.TextPath="StorageName" ItemsSource="{Binding Storage}" DisplayMemberPath="StorageName" SelectedValuePath="StorageName" Margin="0,149,312,0"/>

            <TextBlock Text="Штрафные пачки" TextAlignment="Center" TextWrapping="Wrap" HorizontalAlignment="Right" FontSize="16"  Width="94" Margin="0,197,190,250"/>
            <TextBox Text="" Name="tbFinePacks" Width="100" FontSize="18" Margin="604,154,196,300"/>

            <TextBlock Text="Кол-во пачек" TextWrapping="Wrap" HorizontalAlignment="Right" FontSize="16"  Width="100" Margin="0,187,87,253"/>
            <TextBox Text="" Name="tbcolvoPacks" Width="100" FontSize="18" Margin="713,149,87,300"/>

            <TextBlock Text="Дата литья" TextWrapping="Wrap" HorizontalAlignment="Right" FontSize="16"  Width="100" Margin="0,287,672,163"/>
            <DatePicker Name="dpDateFoundry" FontSize="16" DisplayDateStart="2020-01-01" DisplayDateEnd="2099-01-01" Width="100" Margin="118,242,682,202"/>

            <TextBlock Text="Литейщик" TextWrapping="Wrap" HorizontalAlignment="Right" FontSize="16"  Width="100" Margin="0,287,548,168"/>
            <ComboBox Name="tbFoundry" TextBoxBase.TextChanged="tbFoundry_TextChanged"  IsEditable="True" FontSize="18" HorizontalAlignment="Right"  Height="33"  Text="" VerticalAlignment="Top" Width="100" TextSearch.TextPath="FIO_Foundry" ItemsSource="{Binding Foundry}" DisplayMemberPath="FIO_Foundry" SelectedValuePath="FIO_Foundry" Margin="0,250,557,0"/>

            <TextBlock Text="Артикул" TextWrapping="Wrap" HorizontalAlignment="Right" FontSize="16"  Width="100" Margin="0,287,420,168"/>
            <ComboBox Name="tbArticle2" TextBoxBase.TextChanged="tbArticle2_TextChanged"  IsEditable="True" FontSize="18" HorizontalAlignment="Right"  Height="55" Margin="0,228,429,0"  Text="" VerticalAlignment="Top" Width="100" TextSearch.TextPath="Article" ItemsSource="{Binding Articles}" DisplayMemberPath="Article" SelectedValuePath="Article" />

            <TextBlock Text="Кол-во пачек" TextWrapping="Wrap" TextAlignment="Center" HorizontalAlignment="Right" FontSize="16"  Width="90" Margin="0,289,320,145"/>
            <TextBox Text="" Name="tbcolvoPacks2" Width="100" FontSize="18" Margin="488,242,312,201"/>

            <TextBlock Text="Брак литья в пачках" TextAlignment="Center" TextWrapping="Wrap" HorizontalAlignment="Right" FontSize="16"  Width="85" Margin="0,289,202,147"/>
            <TextBox Text="" Name="tbFinePacksFoundry" Width="100"  FontSize="18" Margin="613,236,187,201"/>

            <Button x:Name="ChangeButton" Content="Сохранить изменения" Click="ChangeButton_Click" Background="AliceBlue" IsDefault="True"  Width="200" Margin="290,344,310,58"/>
        </Grid>
    </Viewbox>

</Window>
