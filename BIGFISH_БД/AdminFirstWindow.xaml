<UserControl x:Class="BIGFISH_БД.AdminFirstWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BIGFISH_БД"  
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="630" d:DesignWidth="1130">

    <UserControl.Resources>
        <Style x:Key="DashboardCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#FFE0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Margin" Value="12"/>
            <Setter Property="Padding" Value="18"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="15" ShadowDepth="3" Color="#FFAAAAAA" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DashboardButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="SlateBlue"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="18,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="38"/>
            <Setter Property="VerticalAlignment" Value="Bottom"/>
        </Style>

        <Style x:Key="CardTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="17"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="SlateBlue"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="IconStyle" TargetType="materialDesign:PackIcon">
            <Setter Property="Width" Value="36"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Foreground" Value="SlateBlue"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
    </UserControl.Resources>

    <Grid Background="#FFF5F5F5">
        <ScrollViewer VerticalScrollBarVisibility="Disabled" Margin="15">
            <StackPanel Margin="0,30,0,30" VerticalAlignment="Center">

                <WrapPanel HorizontalAlignment="Center" Margin="0,0,0,20">

                    <Border Style="{StaticResource DashboardCardStyle}" Width="300" Height="200">
                        <Grid>
                            <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center">
                                <materialDesign:PackIcon Kind="ClipboardEdit" Style="{StaticResource IconStyle}"/>
                                <TextBlock Text="Ежедневные данные о сборке" Style="{StaticResource CardTitleStyle}" Margin="0,0,0,10"/>
                                <TextBlock Text="Заполнение ежедневной информации о производстве" 
                                           TextWrapping="Wrap" 
                                           TextAlignment="Center" 
                                           Foreground="#FF666666" 
                                           FontSize="12"
                                           Margin="0,0,0,15"/>
                            </StackPanel>
                            <Button x:Name="DailyReport" 
                                    Content="Перейти к таблице" 
                                    Style="{StaticResource DashboardButtonStyle}"
                                    Click="DailyReport_Click"/>
                        </Grid>
                    </Border>

                    <Border Style="{StaticResource DashboardCardStyle}" Width="300" Height="200">
                        <Grid>
                            <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center">
                                <materialDesign:PackIcon Kind="CashMultiple" Style="{StaticResource IconStyle}"/>
                                <TextBlock Text="Доп. услуги и авансы" Style="{StaticResource CardTitleStyle}" Margin="0,0,0,10"/>
                                <TextBlock Text="Управление дополнительными выплатами и авансами" 
                                           TextWrapping="Wrap" 
                                           TextAlignment="Center" 
                                           Foreground="#FF666666" 
                                           FontSize="12"
                                           Margin="0,0,0,15"/>
                            </StackPanel>
                            <Button x:Name="DopReport" 
                                    Content="Перейти к таблицам" 
                                    Style="{StaticResource DashboardButtonStyle}"
                                    Click="DopReport_Click"/>
                        </Grid>
                    </Border>

                    <Border Style="{StaticResource DashboardCardStyle}" Width="300" Height="200">
                        <Grid>
                            <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center">
                                <materialDesign:PackIcon Kind="CalendarText" Style="{StaticResource IconStyle}"/>
                                <TextBlock Text="Отчет по дням" Style="{StaticResource CardTitleStyle}" Margin="0,0,0,10"/>
                                <TextBlock Text="Детальная статистика по дням и периодам" 
                                           TextWrapping="Wrap" 
                                           TextAlignment="Center" 
                                           Foreground="#FF666666" 
                                           FontSize="12"
                                           Margin="0,0,0,15"/>
                            </StackPanel>
                            <Button x:Name="OnePersonReport" 
                                    Content="Сформировать отчет" 
                                    Style="{StaticResource DashboardButtonStyle}"
                                    Click="OnePersonReport_Click"/>
                        </Grid>
                    </Border>

                </WrapPanel>

                <WrapPanel HorizontalAlignment="Center">

                    <Border Style="{StaticResource DashboardCardStyle}" Width="300" Height="200">
                        <Grid>
                            <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center">
                                <materialDesign:PackIcon Kind="AccountGroup" Style="{StaticResource IconStyle}"/>
                                <TextBlock Text="Отчет по упаковщицам" Style="{StaticResource CardTitleStyle}" Margin="0,0,0,10"/>
                                <TextBlock Text="Статистика и аналитика работы упаковщиц" 
                                           TextWrapping="Wrap" 
                                           TextAlignment="Center" 
                                           Foreground="#FF666666" 
                                           FontSize="12"
                                           Margin="0,0,0,15"/>
                            </StackPanel>
                            <Button x:Name="ReportPackers" 
                                    Content="Сформировать отчет" 
                                    Style="{StaticResource DashboardButtonStyle}"
                                    Click="ReportPackers_Click"/>
                        </Grid>
                    </Border>

                    <Border Style="{StaticResource DashboardCardStyle}" Width="300" Height="200">
                        <Grid>
                            <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center">
                                <materialDesign:PackIcon Kind="AccountHardHat" Style="{StaticResource IconStyle}"/>
                                <TextBlock Text="Отчет по литейщикам" Style="{StaticResource CardTitleStyle}" Margin="0,0,0,10"/>
                                <TextBlock Text="Анализ производительности литейного цеха" 
                                           TextWrapping="Wrap" 
                                           TextAlignment="Center" 
                                           Foreground="#FF666666" 
                                           FontSize="12"
                                           Margin="0,0,0,15"/>
                            </StackPanel>
                            <Button x:Name="ReportFoundry" 
                                    Content="Сформировать отчет" 
                                    Style="{StaticResource DashboardButtonStyle}"
                                    Click="ReportFoundry_Click"/>
                        </Grid>
                    </Border>

                    <Border Style="{StaticResource DashboardCardStyle}" Width="300" Height="200">
                        <Grid>
                            <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center">
                                <materialDesign:PackIcon Kind="FileChart" Style="{StaticResource IconStyle}"/>
                                <TextBlock Text="Итоговый отчет по зарплате" Style="{StaticResource CardTitleStyle}" Margin="0,0,0,10"/>
                                <TextBlock Text="Сводный отчет по заработной плате сотрудников" 
                                           TextWrapping="Wrap" 
                                           TextAlignment="Center" 
                                           Foreground="#FF666666" 
                                           FontSize="12"
                                           Margin="0,0,0,15"/>
                            </StackPanel>
                            <Button x:Name="TotalReport" 
                                    Content="Сформировать отчет" 
                                    Style="{StaticResource DashboardButtonStyle}"
                                    Background="#FF28A745"
                                    Click="TotalReport_Click"/>
                        </Grid>
                    </Border>

                </WrapPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>